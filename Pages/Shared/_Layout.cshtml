<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Aunty 'B' Compere</title>
    @*<link rel="stylesheet" href="~/AuntyBCompere.styles.css" asp-append-version="true" />*@

    <!-- Vendor CSS Files -->
    <link href="~/lib/animate.css/animate.min.css" rel="stylesheet">
    <link href="~/lib/aos/aos.css" rel="stylesheet">
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="~/lib/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link href="~/lib/swiper/swiper-bundle.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- ======= Top Bar ======= -->
    <div id="topbar" class="d-flex align-items-center fixed-top">
        <div class="container d-flex justify-content-center justify-content-md-between">

            <div class="contact-info d-flex align-items-center">
                <i class="fa-solid fa-phone d-flex align-items-center fw-600">
                    <span>
                        <a href="tel:+1 (240) 898-6147">+1 (240) 898-6147</a>
                    </span>
                </i>
                <i class="fa-solid fa-clock d-flex align-items-center ms-4 fw-600"><span> Mon-Sat: 11AM - 23PM</span></i>
            </div>

            <div class="socials d-none d-md-flex align-items-center">
                <ul>
                    <li><a href="https://www.instagram.com/auntybcompereevents/" target="_blank"><i class="fa-brands fa-instagram"></i></a></li>
                    <li><a href="https://web.facebook.com/auntybcompere.bukola" target="_blank"><i class="fa-brands fa-facebook"></i></a></li>
                </ul>
            </div>
        </div>
    </div>

    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top d-flex align-items-cente">
        <div class="container-fluid container-xl d-flex align-items-center justify-content-lg-between">

            <h1 class="logo me-auto me-lg-0"><a href="/">Aunty 'B' Compere</a></h1>
            <!-- Uncomment below if you prefer to use an image logo -->
            <!-- <a href="/" class="logo me-auto me-lg-0"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->

            <nav id="navbar" class="navbar order-last order-lg-0">
                <ul>
                    <li><a class="nav-link scrollto @(ViewData["page-name"] == "home" ? "active" : "")" href="/">Home</a></li>
                    <li><a class="nav-link scrollto @(ViewData["page-name"] == "about" ? "active" : "")" href="/about">About</a></li>
                    <li><a class="nav-link scrollto @(ViewData["page-name"] == "services" ? "active" : "")" href="/services">Services</a></li>
                    <li><a class="nav-link scrollto @(ViewData["page-name"] == "contact" ? "active" : "")" href="/contact">Contact</a></li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->
            <a href="/book" class="book-a-table-btn scrollto d-none d-lg-flex">Book an Appointment Now</a>

        </div>
    </header><!-- End Header -->


    <div>
        <main role="main" id="main">
            @RenderBody()
        </main>
    </div>

    <!-- ======= Footer ======= -->
    <footer id="footer">
        <div class="footer-top">
            <div class="container">
                <div class="row">

                    <div class="col-lg-4 col-md-6">
                        <div class="footer-info">
                            <h3 class="fw-400 primary-color">Aunty 'B' Compere</h3>
                            <p>
                                6492 Landover Rd Cheverly <br>
                                MD Suite D5 20785, USA<br><br>
                                <span class="fw-600">Phone:</span> <a href="tel:+1 (240) 898-6147" class="text-white">+1 (240) 898-6147</a> <br>
                                <span class="fw-600">Email:</span> <a href="mailto:contact@auntybcompere.com" class="text-white">contact@auntybcompere.com</a><br>
                            </p>
                            <div class="social-links mt-3">
                                <a href="https://web.facebook.com/auntybcompere.bukola" target="_blank" class="facebook">
                                    <i class="fa-brands fa-facebook"></i>
                                </a>
                                <a href="https://www.instagram.com/auntybcompereevents/" target="_blank" class="instagram">
                                    <i class="fa-brands fa-instagram"></i>
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 footer-links">
                        <h4 class="primary-color">Useful Links</h4>
                        <ul>
                            <li><i class="bx bx-chevron-right"></i> <a href="/">Home</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="/about">About us</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="/book">Book An Appointment</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="/services">Services</a></li>
                            @*<li><i class="bx bx-chevron-right"></i> <a href="#">Gallery</a></li>*@
                            <li><i class="bx bx-chevron-right"></i> <a href="/contact">Contact</a></li>
                            @*<li><i class="bx bx-chevron-right"></i> <a href="#">Testimonials</a></li>*@
                        </ul>
                    </div>

                    <div class="col-lg-4 col-md-6 footer-links">
                        <h4 class="primary-color">Our Services</h4>
                        <ul>
                            <li>
                                <i class="bx bx-chevron-right"></i>
                                <a asp-page="/services/details" asp-route-id="1">Event MC/Compere</a>
                            </li>
                            <li>
                                <i class="bx bx-chevron-right"></i>
                                <a asp-page="/services/details" asp-route-id="2">Alaga Iduro/Ijoko</a>
                            </li>
                            <li>
                                <i class="bx bx-chevron-right"></i>
                                <a asp-page="/services/details" asp-route-id="3">Clowning and Costuming</a>
                            </li>
                            <li>
                                <i class="bx bx-chevron-right"></i>
                                <a asp-page="/services/details" asp-route-id="4">Trainings</a>
                            </li>
                        </ul>
                    </div>

                    @*<div class="col-lg-4 col-md-6 footer-newsletter">
                    <h4>Our Newsletter</h4>
                    <p>Tamen quem nulla quae legam multos aute sint culpa legam noster magna</p>
                    <form action="" method="post">
                    <input type="email" name="email"><input type="submit" value="Subscribe">
                    </form>

                    </div>*@

                </div>
            </div>
        </div>

        <div class="container">
            <div class="copyright">
                &copy; @DateTime.Now.Year <strong><span>Aunty 'B' Compere</span></strong>. All Rights Reserved
            </div>
        </div>
    </footer><!-- End Footer -->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="~/lib/aos/aos.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/glightbox/js/glightbox.min.js"></script>
    <script src="~/lib/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/lib/swiper/swiper-bundle.min.js"></script>

    <script src="~/js/main.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required : false)
</body>
</html>