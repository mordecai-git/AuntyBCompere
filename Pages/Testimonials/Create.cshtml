    }

    <script>
        $(document).ready(function () {
            $('#form').submit(function (e) {
                e.preventDefault();

                $("#submitBtn").attr("disabled", true);
                this.submit();
            });

            var myModal = new bootstrap.Modal(document.getElementById('exampleModal'),
                {
                    keyboard: true
                });

        @if (TempData["SCC"] != null)
        {
            @:myModal.show();
        }
    });
    </script>
